{
  "extends": "@tsconfig/node20/tsconfig.json",
  "ts-node": { "files": true },
  "compilerOptions": {
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },

  "include": ["src", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
